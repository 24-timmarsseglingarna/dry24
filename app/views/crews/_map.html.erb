<script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {mapTypeId: google.maps.MapTypeId.TERRAIN }, internal: {id: 'map'}}, function(){
        <%- for @polyline in @polylines do %>
            handler.addPolyline(<%=raw @polyline.to_json %>, { strokeColor: '#FF0000', strokeOpacity:0.2, strokeWeight:2});
        <%- end %>
        markers = handler.addMarkers(<%=raw @hash.to_json %>);

        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>